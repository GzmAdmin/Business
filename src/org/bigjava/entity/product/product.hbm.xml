<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.bigjava.entity.product"> <!-- 声明映射文件的包 -->
	<class name="Product" table="product"> <!-- 声明映射文件的类，表 -->
		<id name="p_id" type="java.lang.Integer"> <!-- p_id为类的属性、表的属性名 -->
			<generator class="native" ></generator>
		</id>
		<property name="p_name" not-null="true" /> <!-- p_name为类的属性、表的属性名 -->
		<property name="p_price" not-null="true" /> <!-- p_price为类的属性、表的属性名 -->
		<property name="market" not-null="true" /> <!-- market为市场价格 -->
		<property name="p_image" not-null="true" /> <!-- p_image为类的属性、表的属性名 -->
		<property name="p_desc" /> <!-- describe为类的属性、表的属性名 -->
		<property name="sale_volume" /> <!-- sale_volume为类的属性、表的属性名 -->
		<property name="is_hot" /> <!-- is_hot为类的属性、表的属性名 -->
		<property name="p_date" not-null="true" /><!-- 商品上架时间 -->
		
		<many-to-one name="categorySecond" column="cs_id" class="org.bigjava.entity.categorysecond.CategorySecond" lazy="false" not-null="true" /><!-- 多对一指向二级分类类 -->
	
		<many-to-one name="orderItem" class="org.bigjava.entity.orderitem.Orderitem" column="item_id" lazy="false" /><!-- 一对一商品表指向订单项类 -->
	
		<set name="setCom">
			<key column="p_id" /><!-- p_id为Product表与Comment表的外键连接 -->
			<one-to-many class="org.bigjava.entity.comment.Comment" /><!-- 一对多指向Comment类 -->
		</set>
	</class>
</hibernate-mapping>

